# PASIS Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for strategic analysis
ANTHROPIC_API_KEY=

# Optional: NewsAPI Key for enhanced news collection
# Get one at https://newsapi.org (free tier: 100 req/day)
NEWS_API_KEY=your_news_api_key_here

# Database (default: SQLite, set for PostgreSQL)
DATABASE_URL=sqlite:///./pasis.db
# DATABASE_URL=postgresql://user:password@localhost:5432/pasis

# Scheduler Config
SCHEDULE_DAY=monday
SCHEDULE_HOUR=9
SCHEDULE_TIMEZONE=Asia/Seoul